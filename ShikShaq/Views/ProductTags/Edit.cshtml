@model WebApplication1.Models.ProductTag

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Product Tag</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Product" class="control-label"></label>
                <select name="ProductId" class="form-control" asp-items="@ViewBag.Products"></select>
            </div>

            <div class="form-group">
                <label asp-for="Tag" class="control-label"></label>
                <select name="TagId" class="form-control" asp-items="@ViewBag.Tags"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
