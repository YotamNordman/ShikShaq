@model WebApplication1.Models.ProductTag

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>ProductTag</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product" class="control-label"></label>
                <select name="ProductId" class="form-control" asp-items="@ViewBag.Products" required></select>
            </div>

            <div class="form-group">
                <label asp-for="Tag" class="control-label"></label>
                <select name="TagId" class="form-control" asp-items="@ViewBag.Tags" required></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
